<div  class="flex flex-col items-center px-40 py-8">

    <h1 class="text-5xl">Conheça alguns de nossos pensamentos!</h1>
    <form action="/" method="get" class="mt-12">
    
        <input type="text" name="search" id="search" placeholder="Está buscando por algo?">
        <input type="submit" value="Buscar">
    
    </form>


    <div class="flex gap-8 mt-6">
        <p>Ordenar por:</p>
        <a href="">Mais novo</a>
        <a href="">Mais antigo</a>
        <a href="">Limpar</a>
    </div>


    <div>

        {{#each toughts}}
        <figure>
            <blockquote>
                "{{title}}"
            </blockquote>
            <figcaption>por <span>{{User.userName}}</span></figcaption>
        </figure>
    {{/each}}
    </div>
</div>